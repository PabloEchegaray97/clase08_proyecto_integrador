<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-8">
            <div class="card border rounded">
                <div class="card-header bg-primary text-white">
                    <h1 class="h3">Profile</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <label class="font-weight-bold">First Name:</label>
                        </div>
                        <div class="col-md-8">
                            <p class="mb-0">{{first_name}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Last Name:</label>
                        </div>
                        <div class="col-md-8">
                            <p class="mb-0">{{last_name}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Age:</label>
                        </div>
                        <div class="col-md-8">
                            <p class="mb-0">{{age}}</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label class="font-weight-bold">Email:</label>
                        </div>
                        <div class="col-md-8">
                            <p class="mb-0">{{email}}</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-12 text-center">
                            <a href="/api/session/logout" class="btn btn-danger">Logout</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
