<h2>List Products</h2>

<div class="container">
    {{#each products}}
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{this.photo}}" class="card-img img-mod" alt="{{this.name}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.type}}</p>
                    <a href="/product/{{this._id}}" class="btn btn-primary">View Details</a>
                    <a href="/product/delete/{{this._id}}" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
