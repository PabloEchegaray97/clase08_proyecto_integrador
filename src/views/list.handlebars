<h2 class="mb-4">Products</h2>
<div class="container">
    {{#each docs}}
    <div class="card mb-3">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="{{this.photo}}" class="card-img img-mod" alt="{{this.name}}">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">${{this.price}}</p>
                    <a href="/product-detail/{{this._id}}" class="btn btn-primary">View Details</a>
                    <a href="/products/" onclick="deleteProduct('{{_id}}')" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    <div class="d-flex justify-content-center mt-4">
        {{#if hasPrevPage}}
            <a href="{{prevLink}}" class="btn btn-secondary mx-1">Prev</a>
        {{/if}}
        {{#if hasNextPage}}
            <a href="{{nextLink}}" class="btn btn-secondary mx-1">Next</a>
        {{/if}}
    </div>
</div>
<script src="/public/js/products.js"></script>
