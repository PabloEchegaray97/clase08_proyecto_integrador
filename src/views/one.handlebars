<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card col-md-6">
        <img src="{{photo}}" alt="{{name}}" class="card-img-top img-fluid rounded" style="object-fit: cover; height: 300px;">
        <div class="card-body text-center">
            <h2 class="card-title">{{name}}</h2>
            <p class="card-text">
                <strong>${{price}}</strong>
            </p>
            <a href="/products/" onclick="deleteProduct('{{_id}}')" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

<script src="/public/js/products.js"></script>
